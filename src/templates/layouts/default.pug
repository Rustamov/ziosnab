include _includes
block variables

doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		title #{title}
		
		
		meta(name="description" content="")
		meta(name="twitter:title" content="Мета Заголовок")
		meta(name="twitter:description" content="Мета описание")
		meta(name="twitter:image" content="img.jpg")
		// Open Graph data
		meta(property="og:type" content="article")
		meta(property="og:title" content="Мета Заголовок")
		meta(property="og:description" content="Мета описание")
		meta(property="og:image" content="img.jpg")
		
		meta(name="theme-color" content="#fff")
		meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
		link(rel="shortcut icon" href="favicon.ico" type="image/x-icon")
		
		link(rel="stylesheet" href="css/styles.css")
		link(rel="preload" href="/img/sprite/symbol/sprite.svg" as="image" type="image/svg+xml")
	body(class=bodyClass)
		div.wrapper
			include ../blocks/header.pug
			block content
			include ../blocks/footer.pug


		block scripts
			script(src="js/scripts.js")

